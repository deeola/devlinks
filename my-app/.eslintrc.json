{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "workingDirectories": [
        "Dir1",
        "Dir2"
      ],
      "validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
      ],
    "rules": {
        "@typescript-eslint/explicit-function-return-type": "off",
        "semi": "off",
        "quotes": "off",
        "@typescript-eslint/semi": ["error", "always"],
        "@typescript-eslint/quotes": "off"
        // "avoidEscape": 0,
        // "allowTemplateLiterals": true
    }

}
